<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spell 1"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spell1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spell 2"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spell2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>
    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spell 3"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spell3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spell 4"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spell4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveSpells"
        android:onClick="saveSpells"
        android:text="Save"/>
</LinearLayout>